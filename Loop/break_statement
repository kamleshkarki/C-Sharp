using System;
namespace Loops
{
    class Program
    {
        static void Main(string[] args)
        {
            
            int a = 10; /* local variable */

           
            while (a < 20) /* while loop execution */
            {
                Console.WriteLine("value of a: {0}", a);
                a++;
                if (a > 15)
                {
                    /* terminate loop using break statement */
                    break;
                }
            }
            Console.ReadLine();
        }
    }
}
